{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": ".next",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "env"
  ],
  "exclude": ["node_modules", ".next"]
}
